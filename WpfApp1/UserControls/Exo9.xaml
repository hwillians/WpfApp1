<UserControl x:Class="WpfApp1.UserControls.Exo9"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="100">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Button BorderThickness="1" BorderBrush="Black" Content="0,0" Grid.Column="0" Grid.Row="0"/>
        <Button BorderBrush="Black" Content="1,1" Grid.Column="1" Grid.Row="1"/>
        <Button BorderBrush="Black" Content="0,2" Grid.Column="0" Grid.Row="2"/>
        <Button BorderBrush="Black" Content="2,2, ColumnSpan 2" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2"/>
        <Button BorderBrush="Black" Content="3,3" Grid.Column="3" Grid.Row="3"/>

    </Grid>
</UserControl>
